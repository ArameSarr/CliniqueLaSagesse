<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Permissions -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/clinique_logo"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:theme="@style/Theme.CliniqueLaSagesse">
         <activity
            android:name=".activities.ProfilPatientActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Splash Screen -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.CliniqueLaSagesse">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Other Activities -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.PatientActivity"
            android:exported="true"
            android:label="@string/title_patient" />
        <activity
            android:name=".activities.MedecinActivity"
            android:exported="true"
            android:label="@string/title_medecin" />
        <activity
            android:name=".activities.AdminActivity"
            android:exported="true"
            android:label="@string/title_admin" />
        <activity
            android:name=".activities.PrendreRendezVousActivity"
            android:exported="true"
            android:label="@string/title_nouveau_rdv"
            android:parentActivityName=".activities.PatientActivity" />
        <activity
            android:name=".activities.ConsulterDossierActivity"
            android:exported="true"
            android:label="@string/title_dossier_medical"
            android:parentActivityName=".activities.PatientActivity" />
        <activity
            android:name=".activities.GererUtilisateursActivity"
            android:exported="true"
            android:label="@string/title_gerer_utilisateurs"
            android:parentActivityName=".activities.AdminActivity" />
    </application>

</manifest>