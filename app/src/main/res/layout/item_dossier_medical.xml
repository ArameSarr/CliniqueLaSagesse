<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_dossier"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- En-tête -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="25/12/2024"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_medecin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr. Nom"
                android:textSize="14sp"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Diagnostic -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnostic"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:alpha="0.7" />

        <TextView
            android:id="@+id/tv_diagnostic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnostic du patient"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <!-- Prescription -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prescription"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:alpha="0.7" />

        <TextView
            android:id="@+id/tv_prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Médicaments prescrits"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp" />

        <!-- Notes -->
        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes supplémentaires"
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurface"
            android:alpha="0.8"
            android:visibility="gone" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>